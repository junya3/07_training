include /component/pug/ui/_sec-title
include /component/pug/ui/_info-card
include /component/pug/ui/_link

mixin feature-overview
  -
    const features = [
      {
        icon: 'bolt',
        color: 'blue',
        title: '高速同期',
        description: 'リアルタイムでの同期により、チーム全体が常に最新の情報を共有'
      },
      {
        icon: 'users',
        color: 'green',
        title: 'チーム連携',
        description: 'シームレスなコミュニケーションとプロジェクト管理機能'
      },
      {
        icon: 'shield-halved',
        color: 'purple',
        title: '企業レベルセキュリティ',
        description: 'エンドツーエンド暗号化による安全なデータ保護'
      },
    ]

  section.feature-overview
    .container
      +sec-title("成功に必要なすべてが揃っています", "ワークフローを効率化し、チームの生産性を向上させる強力な機能")

      ul.feature-overview__feature-cards.col.col-3
        each feature in features
          +info-card(feature.title, feature.description, feature.icon, feature.color)

      +link("すべての機能を見る →", "/")
