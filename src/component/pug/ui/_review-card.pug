mixin review-card(name, job, rating, review)
  li.review-card.card
    .review-card__rating
      - for (var i = 1; i <= 5; i++)
        if i <= rating
          span.rating__star.rating__star--active ★
        else
          span.rating__star.rating__star--empty ☆
    p.review-card__text "#{ review }"
    hgroup.review-card__header
      h3.review-card__name= name
      p.review-card__job= job
